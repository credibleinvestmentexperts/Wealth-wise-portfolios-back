    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f4f8; /* --neutral-light */
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 600px;
        background: #ffffff; /* --plan-bg */
        padding: 25px;
        border-radius: 8px;
        border: 1px solid #cfd8e3; /* --nav-btns-bor-bottom */
