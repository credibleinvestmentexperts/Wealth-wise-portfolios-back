        text-align: start;
        margin: auto;
      }
      h2 {
        color: #1e3a8a; /* --nav-linkss */
        margin-bottom: 15px;
        font-size: 22px;
      }
      p {
        color: #0a1f44; /* --text-dark */
        font-size: 15px;
        line-height: 1.6;
        margin: 10px 0;
      }
      .highlight {
        font-weight: bold;
        color: #1e40af; /* --primary-accent-alt */
      }
      .code-box {
        display: inline-block;
        padding: 14px 28px;
        margin: 25px 0;
        background-color: #e4e3e3; /* --nav-btns-bg */
